<Window x:Class="FinalAttemptWPF.Views.MainWin"
        xmlns:entity="clr-namespace:FinalAttemptWPF.Model.Entity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:services="clr-namespace:FinalAttemptWPF.Services"
        xmlns:local="clr-namespace:FinalAttemptWPF.Views" xmlns:viewmodels="clr-namespace:FinalAttemptWPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DevicesViewModel}"
        mc:Ignorable="d"
        Title="MainWin" 
        Height="650" 
        Width="900"
        ResizeMode="NoResize">
    <Window.Resources>
        <services:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <TextBlock Name="DeviceOneDisplay" 
                   Text="{Binding CurrentTemp1}" 
                   FontSize="30" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" Margin="0,237,0,0"/>

        <TextBlock Name="DeviceTwoDisplay" 
                   Grid.Column="1" 
                   Text="{Binding CurrentTemp2}" 
                   FontSize="30" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" Margin="0,237,0,0"/>

        <TextBlock HorizontalAlignment="Center" 
                   TextAlignment="Center" 
                   Margin="0,194,0,0" 
                   TextWrapping="Wrap" 
                   Text="Device 1" 
                   VerticalAlignment="Top" 
                   Width="120"  />

        <TextBlock HorizontalAlignment="Center" 
                   TextAlignment="Center" 
                   Margin="0,194,0,0" 
                   TextWrapping="Wrap" 
                   Text="Device 2" 
                   VerticalAlignment="Top" 
                   Width="120" 
                   Grid.Column="1"/>

        <Button Name="Butt1" 
                Command = "{Binding StartSimCommand}" 
                CommandParameter= "{x:Static entity:Device.Device1}" 
                Height="30" 
                Width="90" 
                Grid.Column="0" 
                VerticalAlignment="Top" 
                Margin="155,317,155,0" 
                Click="Butt1_Click" />

        <Button Name="Butt2" 
                Command = "{Binding StartSimCommand}" 
                CommandParameter= "{x:Static entity:Device.Device2}" 
                Height="30" 
                Width="90" 
                Grid.Column="1" 
                VerticalAlignment="Top" 
                Margin="155,317,155,0" 
                Click="Butt2_Click" />

        <Ellipse Name="PowerLight1" 
                 Width="40" 
                 Height="40" 
                 Grid.Column="0" 
                 Margin="180,50,180,344" 
                 Fill="Red"/>

        <Ellipse Name="PowerLight2" 
                 Width="40" 
                 Height="40" 
                 Grid.Column="1" 
                 Margin="180,50,180,344" 
                 Fill="Red"/>

        <TextBlock Text="{Binding RTTValue1}" 
                   FontSize="10" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Bottom" 
                   Margin="300,0,0,170" 
                   Grid.Column="0"/>

        <TextBlock Text="{Binding RTTValue2}" 
                   FontSize="10" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Bottom" 
                   Margin="300,0,0,170" 
                   Grid.Column="1"/>
        
       
        
        <TextBlock Text="RTT ALERT!" 
                   Foreground="Red" 
                   Visibility="{Binding RTTAlert1, Converter={StaticResource BoolToVisibilityConverter}}" 
                   FontWeight="Bold" 
                   FontSize="15"
                   FontFamily="Arial"
                   Margin="30,460,303,140"
                   Grid.Column="0"/>
        
        <TextBlock Text="RTT ALERT!" 
                   Foreground="Red" 
                   Visibility="{Binding RTTAlert2, Converter={StaticResource BoolToVisibilityConverter}}" 
                   FontWeight="Bold" 
                   FontSize="18"
                   FontFamily="Arial"
                   Margin="30,461,303,140"
                   Grid.Column="1"/>

        <Button  Name="SettingButton" 
                 Command="{Binding OpenCLICommand}" 
                 Width="40" 
                 Height="40" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top" 
                 Margin="30,30,0,0" 
                 Grid.Column="0"
                 BorderThickness="0" 
                 Click="SettingButton_Click"  >

            <Button.Background >
                <ImageBrush ImageSource="/FinalAttemptWPF;component/Resources/Images/settingsicon.png" Stretch="UniformToFill"/>
            </Button.Background>

        </Button>
        <Button  Name="dbVIew" 
          Width="40" 
          Height="40" 
          HorizontalAlignment="Left" 
          VerticalAlignment="Top" 
          Margin="30,80,0,0" 
          Grid.Column="0"
          BorderThickness="0" 
          Click="SettingButton_Click"  >

            <Button.Background >
                <ImageBrush ImageSource="/FinalAttemptWPF;component/Resources/Images/databaseIcon.png" Stretch="UniformToFill"/>
            </Button.Background>

        </Button>


        <GridSplitter HorizontalAlignment="Right" 
                      Height="450" 
                      Margin="0,0,0,0" 
                      VerticalAlignment="Center" 
                      Width="5" />

    </Grid>
</Window>
